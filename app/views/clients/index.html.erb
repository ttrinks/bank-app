<p id="notice"><%= notice %></p>

<h1>Bankaccounts</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Bank</th>
      <th>Account type</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bankaccounts.each do |bankaccount| %>
      <tr>
        <td><%= bankaccount.client_id %></td>
        <td><%= bankaccount.bank_id %></td>
        <td><%= bankaccount.account_type %></td>
        <td><%= bankaccount.balance %></td>
        <td><%= link_to 'Show', bankaccount %></td>
        <td><%= link_to 'Edit', edit_bankaccount_path(bankaccount) %></td>
        <td><%= link_to 'Destroy', bankaccount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bankaccount', new_bankaccount_path %>
